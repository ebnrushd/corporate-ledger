# Database Configuration
DB_HOST="localhost"
DB_NAME="ledger_db"
DB_USER="ledger_user"
DB_PASSWORD="ledger_password"
DB_PORT="5432"

# Ethereum Node Configuration
ETH_NODE_URL="http://127.0.0.1:8545" # e.g., Ganache, Infura, Alchemy

# Smart Contract Interaction
# Path to the deployment_info.json file generated by the deployment script
CONTRACT_DEPLOYMENT_INFO_PATH="../scripts/deployment_info.json"

# Private key for the API service (which acts as the authorizedBackendAddress for the smart contract)
# IMPORTANT: Ensure this account is funded if it needs to send transactions.
# This account MUST be set as the authorizedBackendAddress in the VisaTopUp smart contract.
API_SERVICE_PRIVATE_KEY="YOUR_API_SERVICE_BACKEND_PRIVATE_KEY_HERE"

# API Service Configuration
FLASK_APP="app.py"
FLASK_ENV="development" # or "production"
FLASK_DEBUG=True       # Set to False in production
API_PORT=5000
# SECRET_KEY for Flask sessions/cookies, if used (not strictly necessary for this basic API)
# FLASK_SECRET_KEY="a_very_secret_key"
